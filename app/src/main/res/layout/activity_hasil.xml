<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HasilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/edview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSkorAkhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/edmain"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="Skor Kamu : 100 "
            android:textColor="@color/putih"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_round_home_24"
                android:paddingLeft="10dp"
                android:drawableTint="@color/main"
                android:layout_margin="20dp"
                android:background="@drawable/edview"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/main"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnReplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/edview"
                android:drawableLeft="@drawable/ic_round_replay_24"
                android:drawableTint="@color/main"
                android:textColor="@color/main"
                android:paddingLeft="15dp"
                android:layout_below="@id/tvSkorAkhir"
                android:layout_toRightOf="@id/btnMenu"
                android:paddingRight="15dp"
                android:gravity="center"
                android:text="Coba Lagi"
                android:textSize="18dp"
                android:fontFamily="@font/quicksand_bold"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>