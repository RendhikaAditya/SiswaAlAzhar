<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HasilActivity">

    <TextView
        android:id="@+id/tvSkorAkhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_skor"
        android:gravity="center"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:text="Skor Kamu : 100 "
        android:textColor="@color/putih"
        android:textSize="30dp"/>



    <Button
        android:id="@+id/btnMenu"
        android:layout_width="90dp"
        android:layout_height="80dp"

        android:layout_below="@id/tvSkorAkhir"
        android:layout_marginTop="40dp"
        android:text="Home"
        android:gravity="center"
        android:background="@drawable/bg_btn_skor"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnReplay"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvSkorAkhir"

        android:layout_marginLeft="186dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/btnMenu"
        android:background="@drawable/bg_btn_skor"
        android:gravity="center"
        android:text="Coba Lagi"
        android:textSize="8dp" />

</RelativeLayout>